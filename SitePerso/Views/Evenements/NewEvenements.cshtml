@model SitePerso.Models.EvenementsModel
@{
    ViewBag.Title = "Nouvel evenement";
}


@Html.Partial("~/Views/Shared/_HeaderPartial.cshtml", Model.connexion)



<section id="explore">
    <div class="container">

        <div class="row">
            <div class="watch">
                <img class="img-responsive" src="~/Content/Images/watch.png" alt="">
            </div>
            <div class="col-sm-3 col-sm-offset-4">
            </div>
            <div class="col-sm-5">
                @using (Html.BeginForm("NewEvenements", "Evenements", FormMethod.Post, new { @id = "evenement" }))
                {
                    <div id="contact-section">
                        <h3>Ajouter un évenement
                            @if (Model.IsUpload)
                            {
                                <span style="color:red; font-weight:bold;" class="pull-right">L'évènement a bien été ajouté.</span>
                            }
                        </h3>
                        <div class="status alert alert-success" style="display: none"></div>
                        <div class="form-group">
                            <input type="text" name="Nom" class="form-control" required="required" placeholder="Nom de l'évenement">
                        </div>
                        <div class="form-group">
                            <input type="date" name="Date" class="form-control" required="required" placeholder="Date de l'évenement">
                        </div>
                        <div class="form-group">
                            <textarea name="Detail" required="required" class="form-control" rows="4" placeholder="Détail du l'évenement'"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary pull-right">Ajouter</button>
                            @Html.ActionLink("Tous les evenements", "Index", "Evenements", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</section><!--/#explore-->



