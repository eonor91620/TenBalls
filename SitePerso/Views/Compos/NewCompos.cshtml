@model SitePerso.Models.ComposModel
@{
    ViewBag.Title = "NewCompos";
}

@Html.Partial("~/Views/Shared/_HeaderPartial.cshtml", Model.connexion)

<section id="contact">
    <div class="contact-section">
        <div class="ear-piece">
            <img class="img-responsive" src="~/Content/Images/ear-piece.png" alt="">
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-1 col-sm-offset-4">
                </div>
                <div class="col-sm-6">
                    <div id="contact-section">
                        @using (Html.BeginForm("NewCompos", "Compos", FormMethod.Post, new { @id = "evenement" ,@enctype = "multipart/form-data"}))
                        {
                            <div id="contact-section">
                                <h3>Ajouter une compos
                                @if (Model.IsUpload)
                                {
                                    <span style="color:red; font-weight:bold;" class="pull-right">Le fichier a bien été ajouté.</span>
                                }
                                </h3>
                                <div class="status alert alert-success" style="display: none"></div>
                                <div class="form-group">
                                    <input type="text" name="Titre" class="form-control" required="required" placeholder="Titre de la compo">
                                </div>
                                <div class="form-group">
                                    <input type="file" name="Chemin" class="form-control" required="required">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary pull-right">Ajouter</button>
                                    @Html.ActionLink("Tous les enregistrements", "Index", "Compos", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

